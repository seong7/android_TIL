<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <GridLayout
            android:id="@+id/gridLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/callBtn"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="#33ACE8"
                android:text="call"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/galleryBtn"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E8BC33"
                android:text="Gallery"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/colorChangeBtn"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:background="#93E851"
                android:text="색 변경"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/calcBtn"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="#8A51E8"
                android:text="간단 계산기 열기"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/calcBtn2"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:background="#4DF4FF"
                android:text="나의 계산기 열기"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/naverBtn"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/naver_green"
                android:text="@string/naverBtn"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/practiceBtn"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="#FF7E2B"
                android:text="연습"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/layoutBtn"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:background="#FF7E2B"
                android:text="Layout 연습"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/finishBtn"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:background="#FF4C38"
                android:text="종료"
                android:textColor="#ffffff" />


        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
